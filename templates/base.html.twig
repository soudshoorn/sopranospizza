<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Pizza Sopranos{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <script src="https://kit.fontawesome.com/c8e4d183c2.js" crossorigin="anonymous"></script>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav>
            <div class="container">
                <div class="row">
                    <div class="nav__wrapper">
                        <div class="nav__logo">
                            <h3 class="nav__logo--title">sopranos</h3>
                        </div>
                        <ul class="nav__list">
                            <li class="nav__list--link"><a class="nav__list--hyper" href="/">Home</a></li>
                            <li class="nav__list--link"><a class="nav__list--hyper" href="/categories">Pizza's</a></li>
                            <li class="nav__list--link"><a class="nav__list--hyper" href="/contact">Contact</a></li>
                            <li class="nav__list--link user__dropdown">
                                {% if is_granted('ROLE_ADMIN') %}
                                <a class="nav__list--hyper" href="{{ path('admin_dashboard') }}">
                                {% else %}
                                <a class="nav__list--hyper" href="{{ path('app_dashboard') }}">
                                {% endif %}
                                    <i class="fas fa-user"></i>
                                </a>
                                <ul class="user__list">
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <li class="user__list--link"><a class="user__list--hyper" href="{{ path('admin_dashboard') }}">Dashboard</a></li>
                                    {% else %}
                                        <li class="user__list--link"><a class="user__list--hyper" href="{{ path('app_dashboard') }}">Dashboard</a></li>
                                    {% endif %}
                                    {% if app.user %}
                                        <li class="user__list--link"><a class="user__list--hyper" href="{{ path('app_logout') }}">Logout</a></li>
                                    {% else %}
                                        <li class="user__list--link"><a class="user__list--hyper" href="{{ path('app_login') }}">Login</a></li>
                                        <li class="user__list--link"><a class="user__list--hyper" href="{{ path('app_register') }}">Registreer</a></li>
                                    {% endif %}
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
        {% block body %}{% endblock %}
        <footer>
            <div class="container">
                <div class="row">

                </div>
            </div>
        </footer>
    </body>
</html>
